{
  "name": "@effatico/kortx-mcp",
  "version": "1.2.3",
  "description": "Kortx: MCP server for AI-powered consultation. GPT-5 strategic planning, Perplexity real-time search, GPT Image visual creation, with intelligent context gathering",
  "type": "module",
  "bin": {
    "kortx-mcp": "./build/index.js"
  },
  "main": "./build/server.js",
  "types": "./build/server.d.ts",
  "exports": {
    ".": {
      "types": "./build/server.d.ts",
      "import": "./build/server.js"
    }
  },
  "files": [
    "build",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "package.json"
  ],
  "keywords": [
    "kortx",
    "mcp",
    "model-context-protocol",
    "llm",
    "gpt-5",
    "openai",
    "claude-code",
    "copliot",
    "ai-assistant",
    "consultant",
    "ai-tools",
    "context-gathering",
    "typescript"
  ],
  "author": "Effati Consulting AB <info@effati.se> (https://github.com/effatico)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/effatico/kortx-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/effatico/kortx-mcp/issues"
  },
  "homepage": "https://github.com/effatico/kortx-mcp#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "dev": "tsx src/index.ts",
    "test": "vitest",
    "test:ci": "vitest run",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\"",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "npm run lint && npm run format:check && npm run build && npm run test:ci",
    "version": "npm run changelog && git add CHANGELOG.md",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-jaeger": "^2.2.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.207.0",
    "@opentelemetry/exporter-zipkin": "^2.2.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.207.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "@perplexity-ai/perplexity_ai": "^0.12.0",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "lru-cache": "^11.2.2",
    "openai": "^6.5.0",
    "opossum": "^9.0.0",
    "pino": "^10.1.0",
    "tiktoken": "^1.0.22",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^24.8.1",
    "@types/opossum": "^8.1.9",
    "@types/pino": "^7.0.4",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/coverage-v8": "^3.2.4",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^15.13.0",
    "husky": "^8.0.3",
    "lint-staged": "^16.2.4",
    "pino-pretty": "^13.1.2",
    "prettier": "^3.1.1",
    "tsx": "^4.7.0",
    "typescript": "~5.9.3",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
